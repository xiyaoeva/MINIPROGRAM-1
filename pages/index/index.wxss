.page {
  padding: 32rpx;
}

.hero {
  margin-bottom: 24rpx;
}

.header-text {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.subtext {
  color: #6b7280;
  font-size: 28rpx;
  line-height: 1.5;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.category-list {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-name {
  font-weight: 700;
  font-size: 32rpx;
}

.arrow {
  color: #2563eb;
  font-size: 26rpx;
}

.tag-list {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
}

.placeholder {
  color: #9ca3af;
  font-size: 26rpx;
}

.results .job-card {
  border: 2rpx solid #eef2ff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
  background: linear-gradient(180deg, #fff, #f8fbff);
}

.job-title {
  font-size: 32rpx;
  font-weight: 700;
}

.job-meta {
  color: #6b7280;
  font-size: 24rpx;
  margin: 6rpx 0 12rpx;
}
