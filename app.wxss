page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', sans-serif;
  color: #1f2937;
}

.section-title {
  font-weight: 600;
  margin: 16rpx 0;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tag {
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: #f0f2f5;
  color: #111827;
  margin: 8rpx 12rpx 8rpx 0;
  display: inline-flex;
  align-items: center;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

.tag.selected {
  background: linear-gradient(120deg, #1d4ed8, #0ea5e9);
  color: #fff;
  box-shadow: 0 10rpx 24rpx rgba(37, 99, 235, 0.3);
  border: 2rpx solid rgba(37, 99, 235, 0.24);
}

.button-primary {
  background: linear-gradient(120deg, #2563eb, #38bdf8);
  color: #fff;
  padding: 20rpx 28rpx;
  border-radius: 14rpx;
  font-weight: 600;
}

.button-secondary {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  color: #111827;
  padding: 18rpx 26rpx;
  border-radius: 14rpx;
  font-weight: 600;
}
